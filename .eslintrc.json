{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true
  },
  "rules": {
    "strict": "error",
    "prefer-const": "error",
    "no-unused-vars": [ "error", { "argsIgnorePattern": "^_" } ],
    "no-var": "error",
    "no-console": ["warn"],
    "import/no-unresolved": ["error"]
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ],
    "import/resolver": "webpack"
  },
  "plugins": [ "import" ]
}
